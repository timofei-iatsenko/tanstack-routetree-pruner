{
  "compilerOptions": {
    "target": "ES2023",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmit": true
  },
  "include": ["./src"],
  "exclude": ["**/fixtures/"]
}
